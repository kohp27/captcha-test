= form_for @inquiry do |f|
  - if @inquiry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@inquiry.errors.count, "error")} prohibited this inquiry from being saved:"
      %ul
        - @inquiry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
